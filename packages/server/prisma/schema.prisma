generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          Int            @id @default(autoincrement())
  date        DateTime
  description String         @default("")
  name        String
  teacher     User           @relation("TaughtGames", fields: [teacherId], references: [id])
  teacherId   Int
  players     UsersOnGames[]
  Team        Team[]
}

model UsersOnGames {
  user   User @relation(fields: [userId], references: [id])
  userId Int // relation scalar field (used in the `@relation` attribute above)
  game   Game @relation(fields: [gameId], references: [id])
  gameId Int // relation scalar field (used in the `@relation` attribute above)
  team   Team @relation(fields: [teamId], references: [id])
  teamId Int

  @@id([userId, gameId])
}

model User {
  id          Int            @id @default(autoincrement())
  email       String         @unique
  isTeacher   Boolean        @default(false)
  country     String
  firstName   String
  lastName    String
  taughtGames Game[]         @relation("TaughtGames")
  playedGames UsersOnGames[]
}

model Team {
  id      Int            @id @default(autoincrement())
  name    String
  game    Game           @relation(fields: [gameId], references: [id])
  gameId  Int
  players UsersOnGames[]
}

model Household {
  id Int @id @default(autoincrement())
}

model policy {
  id             Int  @id @default(autoincrement())
  nuclearInPoint Int?
}
